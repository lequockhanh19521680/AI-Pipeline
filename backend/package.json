{
  "name": "ai-pipeline-backend",
  "version": "1.0.0",
  "description": "AI Pipeline IDE Backend - Node.js + Express + TypeScript with ESM",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec \"node --import tsx\" src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "bullmq": "^5.57.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "js-yaml": "^4.1.0",
    "mongoose": "^8.0.0",
    "redis": "^5.8.1",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.0"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,js,json",
    "ignore": [
      "src/**/*.test.ts"
    ]
  }
}
